<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body">
            <h1 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i> Login</h1>
            <%- include('./partials/messages.ejs') -%>  <%# Partials %>
                    <form action="/users/sign-in" method="POST">
                        <div class="form-group">
                            <label for="Email">Email address</label>
                            <input type="email" name="email" id="" required class="form-control"
                                value="<%= typeof email != 'undefined' ? email : '' %>">
                        </div>
                        <div class="form-group">
                            <label for="password">Password</label>
                            <input type="password" name="password" id="" required class="form-control"
                                value="<%= typeof password != 'undefined' ? password : '' %>">
                        </div>
                        <div class="form-group text-center">
                            <button type="submit" class="btn btn-primary btn-block mt-4">Login</button>
                        </div> 
                        <p>No Account <a href="/users/sign-up"> Register</a></p>
                        <p class="lead mt-4">Login/signup with <a href="/auth/google"> Google</a></p>
                    </form>
        </div>
    </div>
</div>